* {
	box-sizing: border-box;
	margin: 0;
	padding: 0;
}

body {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 100%;
	height: 100vh;
	background-color: hsl(30, 38%, 92%);
	font-family: 'Montserrat', sans-serif;
	font-size: 14px;
}

.card {
	display: flex;
	width: 52vh;
	height: 480px;
	background-color: hsl(0, 0%, 100%);
	border-radius: 15px;
	overflow: hidden;
}

.side {
	width: 50%;
}

.left {
	background-image: url(./images/image-product-desktop.jpg);
	background-size: cover;
}

.right {
	padding: 38px;
}

header {
	text-transform: uppercase;
	letter-spacing: 5px;
	color: hsl(228, 12%, 48%);
}

h1 {
	margin-top: 20px;
	font-family: 'Fraunces', serif;
	font-size: 35px;
	font-weight: bold;
	line-height: 34px;
}

p {
	color: hsl(228, 12%, 48%);
}

.text {
	margin: 24px 0;
	line-height: 24px;
}

.prices {
	display: flex;
	margin-bottom: 14px;
}

.price {
	color: hsl(158, 36%, 37%);
	font-family: 'Fraunces', serif;
	font-size: 36px;
	font-weight: bold;
}

.line-th-price {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 90px;
	text-decoration: line-through;
	font-size: 14px;
}

.btn {
	display: flex;
	padding: 16px 54px;
	margin-top: 26px;
	background-color: hsl(158, 36%, 37%);
	color: #fff;
	border: none;
	border-radius: 10px;
	font-size: 14px;
	font-weight: bold;
	letter-spacing: 1px;
	cursor: pointer;
}

.btn:hover {
	background-color: hsl(158, 29%, 24%);
}

.svg-img {
	margin-right: 11px;
	width: 16px;
}

@media (max-width: 1440px) {
	.card {
		flex-direction: column;
		height: 93vh;
	}

	.left {
		background-image: url(./images/image-product-mobile.jpg);
		background-size: cover;
		width: 100%;
		height: 36vh;
	}

	.right {
		width: 100%;
		padding: 25px 26px;
	}

	header {
		font-size: 12px;
	}

	h1 {
		font-size: 30px;
		margin-top: 10px;
	}

	.text {
		margin: 15px 0;
		font-size: 14px;
		line-height: 26px;
	}

	.prices {
		margin: 0;
	}

	.price {
		font-size: 30px;
	}

	.line-th-price {
		font-size: 14px;
	}

	.btn {
		justify-content: center;
		width: 100%;
		font-size: 14px;
		padding: 16px;
		margin-top: 15px;
	}
}
